<Page x:Class="TestAppUWP.Samples.Animations.DropShadow.DropShadowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Button x:Name="Button" Style="{StaticResource TextBlockButtonStyle}">
            <Border x:Name="Border" CornerRadius="20" Width="100" Height="200"
                    BorderBrush="DarkRed" BorderThickness="2">
                <TextBlock Text="A" Style="{StaticResource TitleTextBlockStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>
        </Button>
    </Grid>
</Page>
