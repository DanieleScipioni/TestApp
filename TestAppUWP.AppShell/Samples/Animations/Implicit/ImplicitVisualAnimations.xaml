<Page x:Class="TestAppUWP.AppShell.Samples.Animations.Implicit.ImplicitVisualAnimations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel VerticalAlignment="Center" Height="240">
            <Button Click="Vector3KeyFrameAnimationn_OnClick" HorizontalAlignment="Stretch">Vector3KeyFrameAnimation</Button>
            <Button Click="SpringVector3NaturalMotionAnimation_OnClick" HorizontalAlignment="Stretch">SpringVector3NaturalMotionAnimation</Button>
            <StackPanel Orientation="Horizontal">
                <Button Click="AddImplicitAnimation_OnClick">Add Impicit</Button>
                <Button Click="RemoveImplicitAnimation_OnClick">Remove Impicit</Button>
                <Button Click="VisibilityAnimation_OnClick">Visibility</Button>
            </StackPanel>
            <Rectangle Width="100" Height="100" Margin="20" x:Name="Rectangle"
                       Fill="BlueViolet"
                       StrokeThickness="10" Stroke="Aqua"/>
        </StackPanel>
    </Grid>
</Page>
