<UserControl
    x:Class="TestAppUWP.Samples.Map.CustomerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                Padding="{ThemeResource FlyoutContentThemePadding}" 
                BorderBrush="{ThemeResource ToolTipBorderThemeBrush}" BorderThickness="1">
        <TextBlock Text="{x:Bind _customer.Backround}"/>
        <TextBlock Text="{x:Bind _customer.Foreground}"/>
        <TextBlock Text="{x:Bind _customer.Number}"/>
    </StackPanel>
</UserControl>
